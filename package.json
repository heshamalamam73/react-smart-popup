{
  "name": "react-smart-popup",
  "version": "1.0.5",
  "description": "simple popup created with react and typescrypt and styled components ",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" ",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "publish": "npm publish",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "version": "npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heshamalamam73/react-smart-popup.git"
  },
  "keywords": [
    "popup",
    "dialog",
    "typescrypt",
    "react"
  ],
  "author": "Mahmoud Okily",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/heshamalamam73/react-smart-popup/issues"
  },
  "homepage": "https://github.com/heshamalamam73/react-smart-popup#readme",
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "styled-components": "^5.3.5"
  }
}
